@using ConstructionDiary.ResourceFiles;
@model VehicleRentVM
@{
    ViewBag.Title = "VehicleRent";
}

<section class="wrapper site-min-height">
    <div class="row">

        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    <strong>Edit Vehicle Rent</strong>

                    <a href="/admin/vehiclerent" class="btn btn-warning" style="float: right; top: -5px; position: relative;">
                        <i class="fa fa-backward"></i> Back
                    </a>

                </header>
                <div class="panel-body">
                    <div class="col-sm-12">
                        <div class="form">
                            @using (Html.BeginForm("Edit", "VehicleRent", FormMethod.Post, new { @id = "FormId", @class = "", enctype = "multipart/form-data", role = "form" }))
                            {

                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <div class="row">
                                    <div class="col-sm-4 form-group">
                                        @Html.LabelFor(model => model.VehicleRentDate, htmlAttributes: new { @class = "" })
                                        @Html.EditorFor(model => model.VehicleRentDate, new { htmlAttributes = new { @class = "form-control default-date-picker valid", @placeholder = "DD/MM/YYYY", maxlength = "50", @readonly = "readonly" } })
                                        @Html.ValidationMessageFor(model => model.VehicleRentDate, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="col-sm-4 form-group">
                                        @Html.LabelFor(model => model.VehicleOwnerId, htmlAttributes: new { @class = "" })
                                        @Html.DropDownList("VehicleOwnerId", new SelectList(Model.VehicleOwnerList, "Value", "Text"), "-" + "Vehicle Owner" + "-", new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.VehicleOwnerId, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="col-sm-4 form-group">
                                        @Html.LabelFor(model => model.VehicleNumber, htmlAttributes: new { @class = "" })
                                        @Html.EditorFor(model => model.VehicleNumber, new { htmlAttributes = new { @class = "form-control", @placeholder = "Vehicle Number", maxlength = "50", @autocomplete = "off" } })
                                        @Html.ValidationMessageFor(model => model.VehicleNumber, "", new { @class = "text-danger" })
                                    </div>

                                </div>

                                <div class="row">

                                    <div class="col-sm-4 form-group">
                                        @Html.LabelFor(model => model.FromLocation, htmlAttributes: new { @class = "" })
                                        @Html.EditorFor(model => model.FromLocation, new { htmlAttributes = new { @class = "form-control", @placeholder = "From Location", maxlength = "100", @autocomplete = "off" } })
                                        @Html.ValidationMessageFor(model => model.FromLocation, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="col-sm-4 form-group">
                                        @Html.LabelFor(model => model.ToLocation, htmlAttributes: new { @class = "" })
                                        @Html.EditorFor(model => model.ToLocation, new { htmlAttributes = new { @class = "form-control", @placeholder = "To Location", maxlength = "100", @autocomplete = "off" } })
                                        @Html.ValidationMessageFor(model => model.ToLocation, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="col-sm-4 form-group">
                                        @Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "" })
                                        @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @type = "number", @class = "form-control", @placeholder = "To Location", maxlength = "100", @autocomplete = "off" } })
                                        @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
                                    </div>

                                </div>

                                <div class="row">
                                    <div class="col-sm-12 form-group">
                                        @Html.LabelFor(model => model.Remarks, htmlAttributes: new { @class = "" })
                                        @Html.EditorFor(model => model.Remarks, new { htmlAttributes = new { @class = "form-control", @placeholder = Resource.Remarks, maxlength = "200" } })
                                    </div>

                                </div>

                                <div class="row">
                                    <div class="col-sm-4">
                                        @Html.HiddenFor(x => x.VehicleRentId)
                                        <button id="btnSubmit" class="btn btn-info" type="submit">@Resource.Save</button>
                                        <a href="/admin/vehiclerent" class="btn btn-default">@Resource.Cancel</a>
                                    </div>
                                </div>

                            }

                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</section>

<script src="~/Areas/Admin/Content/js/jquery.js"></script>
<script>
     
    jQuery(document).ready(function () {
        jQuery('html, body').animate({ scrollTop: 0 }, 1000);
    });

    jQuery("#btnSubmit").click(function (event) {
        if (jQuery("form").valid()) {
            jQuery.blockUI({ message: "<h4>Please Wait...</h4>" });
        }
    });

</script>