@using ConstructionDiary.ResourceFiles;
@model MaterialTypeVM
@{
    ViewBag.Title = "MaterialType";
}

<section class="wrapper site-min-height">
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    <strong>Edit @Resource.MaterialType</strong>
                </header>
                <div class="panel-body">
                    <div class="col-sm-6">
                        <div class="form">
                            @using (Html.BeginForm("Edit", "MaterialType", FormMethod.Post, new { @id = "MaterialTypeFormId", @class = "cmxform form-horizontal", enctype = "multipart/form-data", role = "form" }))
                            {

                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <div class="form-group">
                                    @Html.LabelFor(model => model.MaterialType, htmlAttributes: new { @class = "" })
                                    @Html.EditorFor(model => model.MaterialType, new { htmlAttributes = new { @class = "form-control", @placeholder = @Resource.Material, maxlength = "50" } })
                                    @Html.ValidationMessageFor(model => model.MaterialType, "", new { @class = "text-danger" })
                                </div>

                                <div>
                                    @Html.HiddenFor(x => x.MaterialTypeId)
                                    <button class="btn btn-info" type="submit">@Resource.Save</button>
                                    <a href="/admin/materialtype/" class="btn btn-default">@Resource.Cancel</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</section>

<script src="~/Areas/Admin/Content/js/jquery.js"></script>
<script>

    jQuery(document).ready(function () {
        jQuery('html, body').animate({ scrollTop: 0 }, 1000);
    });

</script>